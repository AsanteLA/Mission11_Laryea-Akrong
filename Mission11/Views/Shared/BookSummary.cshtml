@model Book

<div class="card m-1 p-1">
    <h3>@Model.Title
        <span class="badge rounded-pill bg-primary text-white float-end"><small>$ @Model.Price</small></span></h3>
    <ul>
        <li>Author: @Model.Author</li>
        <li>Classification/Category: @Model.Category | @Model.Classification</li>
        <li>Publisher: @Model.Publisher</li>
        <li>Class: @Model.Classification</li>
        <li>Number of Pages: @Model.PageCount</li>
        <li>ISBN: @Model.Isbn</li>
    </ul>
</div>